@page
@model CategorieModel
@{
    ViewData["Title"] = "Catégories";
}

<h1>Catégories</h1>

<div style="display:flex; flex-wrap:wrap; gap:20px;">
    @foreach (var cat in Model.Categories)
    {
        <div style="border:1px solid #ccc; padding:10px; width:200px; text-align:center;">
            <img src="/Images/Categories/@cat.ImagePath" alt="@cat.Nom" style="width:50px;height:50px;object-fit:cover;" />

            <h3>@cat.Nom</h3>
            <a asp-page="/ListeProduit" asp-route-categorieId="@cat.Id">Voir les produits</a>
        </div>
    }
</div>
